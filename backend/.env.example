# Configuration MongoDB
MONGO_URI="mongodb+srv://username:password@cluster.example.mongodb.net/database-name?retryWrites=true&w=majority&appName=yourapp"

# Configuration JWT (IMPORTANT: Change these values in production)
JWT_SECRET=your_jwt_secret_here
JWT_REFRESH_SECRET=your_refresh_token_secret_here

# Configuration de l'application
PORT=3000
NODE_ENV=development

# Configuration CORS
FRONTEND_URL=http://localhost:8080

# Configuration Email (SMTP)
# IMPORTANT: Gmail requires App Password (not regular password)
# Steps to generate Gmail App Password:
# 1. Go to https://myaccount.google.com/security
# 2. Enable 2-Factor Authentication if not enabled
# 3. Go to App passwords section
# 4. Generate new app password for "Mail"
# 5. Use the generated 16-character password below

EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-app-password"

# Alternative: Use EMAIL_FROM to specify sender name
EMAIL_FROM="Your App <your-email@gmail.com>"

# For testing: Set to 'test' to use Ethereal Email instead of Gmail
# EMAIL_MODE=test

# E2E/Smoke test config
BASE_URL=http://localhost:3000
E2E_SWAGGER_URL=/api/docs-json

# Test credentials (adjust to a real test user in your DB)
TEST_EMAIL=tester@example.com
TEST_PASSWORD=Passw0rd!

# Allow payment endpoints during axios smoke (set false to skip)
ALLOW_PAYMENT=true

# Stripe (TEST mode)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_test_your_stripe_webhook_secret

# Google OAuth 2.0
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# Flouci Payment Gateway (Tunisia)
FLOUCI_BASE_URL=https://developers.flouci.com/api/
FLOUCI_APP_TOKEN=your-public-token
FLOUCI_APP_SECRET=your-private-token
FLOUCI_DEVELOPER_TRACKING_ID=your-dev-tracking
FLOUCI_WEBHOOK_SECRET=your-webhook-secret
